# Test Environment Configuration
# Copy this file to .env.test and update with your local test database credentials

# IMPORTANT: Database must have '_test' in the name for safety
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sistema_de_monitoria_ic_test"

# CAS Authentication (test environment)
CAS_SERVER_URL_PREFIX="https://autenticacao.ufba.br/ca"

# Server URLs
SERVER_URL="http://localhost:3000/api"
CLIENT_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="test"
PORT="3000"

# MinIO Configuration (local or test instance)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="sistema-de-monitoria-e2e-test"

# JWT Secret (test only - 32 characters minimum)
JWT_SECRET="e2e-test-jwt-secret-32-char-minimum-length-required-here"

# Email Configuration (can be disabled for tests)
EMAIL_USER="test@example.com"
EMAIL_PASS=""

# Skip env validation for tests
SKIP_ENV_VALIDATION="true"

# Stagewise (optional for tests)
VITE_ENABLE_STAGEWISE=false
